extends ../layout/layout

block content
  #view-profile-container
    #back-link
      a#back-btn-container(href='/') 
          img#back-img(src='/icons/back-button.svg')
          span#back-text Back
          
    #view-profile
      form(action='/contacts/submit', method='POST')
        fieldset
          legend Profile
          #panel-profile

            #panel-profile-left
              img#profile-img.icon(src='/images/blank-face.jpeg')
              button#upload-photo Upload Photo

            #panel-profile-right
              table#profile-table 
                tr  
                  td ID
                  td #{contact._id}
                tr
                  td First Name
                  td 
                    input(type='text', name='firstname', value=contact.firstname required)
                tr
                  td Last Name
                  td 
                    input(type='text', name='lastname', value=contact.lastname required)
                tr 
                  td Phone
                  td 
                    input(type='text', name='phone', value=contact.phone required)
                    input(type='hidden', name='_id', value=contact._id)
                tr 
                  td
                  td
                    #btn-panel
                      button.btn-profile(type='submit', name='submit', value='update') Update
                      button.btn-profile(type='submit', name='submit', value='delete') Delete
                tr 
                  td
                  td               
                    div.green_msg  #{message}
block footer
  #footer-panel 
    img.icon-info-footer.icon(src='/icons/info.ico')
    span Please click 'Back' button to view Contact List.     